{
  "compilerOptions": {
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "Node",
    "outDir": "dist",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
